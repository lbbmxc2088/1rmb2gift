<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title"></include>

    <com.muan.takeout.Widget.xRefresh.XRefreshView
        android:id="@+id/xrfv_sd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_sd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </com.muan.takeout.Widget.xRefresh.XRefreshView>

    <LinearLayout
        android:id="@+id/ll_redgrab_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_gray"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="5">


        <Button
            android:id="@+id/bt_redgrab_gobuy"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/record_tobuy"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>