<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frml_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/vpage_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/common_bg_gray" />


        <RadioGroup
            android:id="@+id/rg_homemenu"
            style="@style/Main_RadioGroup_Style"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_homemenu_lqg"
                style="@style/Main_RadioButton_Style"
                android:checked="true"
                android:drawableTop="@drawable/selector_homemenu_main_bg"
                android:text="fragment1" />

            <RadioButton
                android:id="@+id/rb_homemenu_zxjx"
                style="@style/Main_RadioButton_Style"
                android:drawableTop="@drawable/selector_homemenu_zxjx_bg"
                android:text="fragment2" />

            <RadioButton
                android:id="@+id/rb_homemenu_fx"
                style="@style/Main_RadioButton_Style"
                android:drawableTop="@drawable/selector_homemenu_fx_bg"
                android:text="fragment3" />


            <RadioButton
                android:id="@+id/rb_homemenu_sd"
                style="@style/Main_RadioButton_Style"
                android:drawableTop="@drawable/selector_homemenu_car_bg"
                android:text="fragment14" />

            <RadioButton
                android:id="@+id/rb_homemenu_wd"
                style="@style/Main_RadioButton_Style"
                android:drawableTop="@drawable/selector_homemenu_wd_bg"
                android:text="fragment15" />
        </RadioGroup>
    </LinearLayout>


</FrameLayout>




