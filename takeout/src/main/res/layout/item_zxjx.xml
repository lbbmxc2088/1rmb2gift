<?xml version="1.0" encoding="UTF-8"?><!-- 最新揭晓，gridview Item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_zxjx_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLines="2"
        android:text="------"
        android:gravity="center_vertical"
        android:textColor="@color/theme_text_black"
        android:textSize="@dimen/main_text" />

    <TextView
        android:id="@+id/tv_qihao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="期号"
      style="@style/Default_Textview"/>
    <!-- 倒计时-->
    <LinearLayout
        android:id="@+id/layout_zxjx_ing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:drawableLeft="@mipmap/icon_clock"
            android:gravity="left|center_vertical"
            android:drawablePadding="3dp"
            android:textColor="@color/main_red"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_timing"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/main_red"
            android:maxLines="1"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- 已经揭晓-->
    <LinearLayout
        android:id="@+id/layout_zxjx_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="@string/zxjx_username"
                style="@style/Default_Textview"/>

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="-----"
                style="@style/Default_Textview"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_join_num"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/zxjx_joinnum"
            style="@style/Default_Textview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:text="@string/zxjx_awardnum"
                style="@style/Default_Textview"/>

            <TextView
                android:id="@+id/tv_lucky_num"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="-----"
                style="@style/Default_Textview"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/zxjx_awardtime"
            android:textColor="@color/theme_text_gray"
            style="@style/Default_Textview" />

    </LinearLayout>



</LinearLayout>