<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/layout_sort_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_record_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/record_all"
                android:textColor="@color/theme_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_record_dfk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/record_dfk"
                android:textColor="@color/theme_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_record_dfh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/record_dfh"
                android:textColor="@color/theme_text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_record_dsh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/record_dcs"
                android:textColor="@color/theme_text_gray"
                android:textSize="14sp" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_move"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/common_devideline_bb">

            <View
                android:id="@+id/view_mywin_move"
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:background="@color/main_red" />
        </FrameLayout>
    </LinearLayout>

    <com.muan.takeout.Widget.xRefresh.XRefreshView
        android:id="@+id/xrfv_lucky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lv_lucky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>

    </com.muan.takeout.Widget.xRefresh.XRefreshView>

    <LinearLayout
        android:id="@+id/ll_lucky_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>


</LinearLayout>